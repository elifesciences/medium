{
    "name": "elife/medium",
    "type": "project",
    "description": "Medium API gateway",
    "license": "GPL-3.0+",
    "require": {
        "silex/silex": "^2.0",
        "jms/serializer": "^1.2",
        "elife/api-validator": "dev-master",
        "symfony/psr-http-message-bridge": "^0.2.0",
        "zendframework/zend-diactoros": "^1.3",
        "symfony/filesystem": "~2.2",
        "propel/propel": "^2.0@alpha",
        "guzzlehttp/guzzle": "^6.2",
        "phpunit/phpunit": "^5.5",
        "elife/api-sdk": "^1.0@dev"
    },
    "autoload": {
        "psr-4": {
            "eLife\\": "src/eLife",
            "eLife\\Medium\\": "cache/propel/src/eLife/Medium"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\eLife\\Medium\\": "./tests/src"
        }
    },
    "scripts": {
        "setup": "propel build && propel sql:build && propel config:convert",
        "database": "propel sql:insert",
        "sync": "propel build && propel sql:build --overwrite && propel sql:insert && propel config:convert",
        "cache:clear" : "rm -rf ./cache/metadata && rm -rf ./cache/annotations"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "symfony/browser-kit": "^3.1",
        "mockery/mockery": "^0.9.5"
    }
}
